pipeline {
    agent{
         label "BuildServer"
    }
    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven3"
    }
    stages {
          stage("Pull Source Code") {
          steps{
              git credentialsId: 'Wed-Git', url: 'https://github.com/vamshikrishnakalleti/Maven-Java-Project.git'
           }
      }
      stage("Compile The Source Code") {
          steps{
            // Run Maven on a Unix agent.
                sh "mvn clean compile"
           }
           }
          stage("Pre Deployment Testing") {
          steps{
            // Run Maven on a Unix agent.
                sh "mvn clean test"
           }
            post {
                // If Maven was able to run the tests, even if some of the test
                // failed, record the test results and .
                success {
                    junit 'target/surefire-reports/*.xml'
                   
                }
            }
           }  
           
           
           
          stage("Packaging") {
          steps{
            // Run Maven on a Unix agent.
                sh "mvn clean package"
           }
            post {
                
                success {
                    archiveArtifacts artifacts: '**/*.war', followSymlinks: false
                   
                }
            }
           }   
           
    
    
  stage("Deploy To Server") {
          steps{  
          
  deploy adapters: [tomcat9(credentialsId: 'Thurs-tomcat', path: '', url: 'http://18.204.199.112:8080/')], contextPath: 'webapp', war: 'target/*.war'
                }
            }
            
           
           
           
           
    
    
    }
    
}
